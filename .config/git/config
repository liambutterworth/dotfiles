[alias]
    log = log --pretty=format:"%C(red)%h\\ %C(white)%s\\ %C(green)%ad\\ %C(blue)%an" --date=relative
    who = !git config user.name && git config user.email
[core]
    editor = nvim
[diff]
    tool = nvim -d
[merge]
    tool = nvim
[user]
    name = Liam Butterworth
    email = contact@liambutterworth.email
[include]
    path = ~/.config/git/profile
